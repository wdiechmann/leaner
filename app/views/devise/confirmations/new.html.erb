<div class="authform">
  <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { class: 'form-horizontal', :role => 'form' ,  method: :post }) do |f| %>
    <h3>Resend confirmation instructions</h3>
    <%= devise_error_messages! %>

    <%= f.error_notification %>
    <%= f.full_error :confirmation_token %>

    <div class="form-group">
       <%= f.label :email %>
       <%= f.email_field :email, class: 'form-control' %>
    </div>

    <%= f.submit "Resend confirmation instructions", :class => 'button right' %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>